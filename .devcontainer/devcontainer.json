{
  "name": "Rust",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "dev",
  "runArgs": [
    "--init",
    "--privileged"
  ],
  "customizations": {
    "jetbrains": {
      "backend": "RustRover",
      "plugins": [
        "com.github.copilot"
      ]
    },
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "Dart-Code.dart-code",
        "Dart-Code.flutter",
        "fill-labs.dependi",
        "skellock.just",
        "tamasfe.even-better-toml"
      ]
    }
  }
}
