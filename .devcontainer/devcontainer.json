{
  "name": "Rust",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "dev",
  "runArgs": [
    "--init",
    "--privileged"
  ],
  "customizations": {
    "jetbrains": {
      "backend": "RustRover",
      "plugins": [
        "org.mvnsearch.plugins.justPlugin"
      ]
    },
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "skellock.just",
        "tamasfe.even-better-toml"
      ]
    }
  }
}
